@model PatientModel

@{
ViewData["Title"] = "Delete Patient";
}

<h2 class="text-center">Delete Patient</h2>
<div class="text-center">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                        <form class="max-1 mx-md-4" asp-controller="Patient" asp-action="DeletePatient" method="post"
                              onsubmit="return confirm('Are you sure you want to delete Patient?')">
                            <input type="hidden" asp-for="PatientId"/>
                            <div class="d-flex flex-row align-items-center mb-1">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label text-center">Name</label>
                                    <input readonly type="text" class="form-control text-center" asp-for="Name"/>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-1">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label text-center">Email</label>
                                    <input type="text" readonly class="form-control text-center" asp-for="Email"/>

                                </div>
                            </div>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label text-center">Mobile</label>
                                <input type="text" readonly class="form-control text-center" asp-for="Mobile"/>

                            </div>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label text-center">Address</label>
                                <input type="text" readonly class="form-control text-center" asp-for="Address"/>

                            </div>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label text-center">Birthdate</label>
                                <input type="text" readonly class="form-control text-center" asp-for="DateOfBirth"/>
                            </div>
                            <br/>
                            <button type="submit" class="btn btn-primary">Confirm</button>
                            <a class="btn btn-secondary" asp-controller="Patient" asp-action="Index">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

