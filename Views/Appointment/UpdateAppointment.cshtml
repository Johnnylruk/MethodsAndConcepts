@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AppointmentModel

@{
ViewData["Title"] = "Update Appointment";
}

<h2 class="text-center">Update Appointment</h2>
<div class="text-center">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                        <form class="max-1 mx-md-4" asp-controller="Appointment" asp-action="UpdateAppointment" method="post"
                              onsubmit="return confirm('Are you sure you want to update Appointment?')">
                            <input type="hidden" asp-for="AppointmentId" />
                            
                            <div class="d-flex flex-row align-items-center mb-1">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control text-center" asp-for="Name" placeholder="Type your name" required
                                           oninvalid="this.setCustomValidity('Please enter appointment name.')" oninput="this.setCustomValidity('')"/>
                                </div>
                            </div>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label">Doctor</label>
                                    <input type="text" asp-for="StaffName" placeholder="@Model.StaffName" readonly class="form-control text-center" />
                                    <input type="hidden" asp-for="StaffId"/>
                                </div>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label">Patient</label>
                                <input type="text" placeholder="@Model.PatientName" readonly class="form-control text-center" asp-for="PatientName" />
                                <input type="hidden" asp-for="PatientId"/>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-1">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label"></label>
                                    <div id="datetimepicker-container" class="fixed-calendar">
                                        <input type="text" id="datetimepicker" class="form-control" asp-for="Date" value="@Model.Date.ToString("yyyy-MM-dd HH:mm")" required
                                               oninvalid="this.setCustomValidity('Please enter appointment date and time.')" oninput="this.setCustomValidity('')" style="display: none;"/>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <button type="submit" class="btn btn-primary">Confirm</button>
                            <a class="btn btn-secondary" asp-controller="Appointment" asp-action="Index">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>