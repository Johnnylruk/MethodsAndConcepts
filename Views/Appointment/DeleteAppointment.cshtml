@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AppointmentModel

@{
ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>
<div class="text-center">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                        <form class="max-1 mx-md-4" asp-controller="Appointment" asp-action="DeleteAppointment" method="post">
                            <input type="hidden" asp-for="AppointmentId" />

                            <div class="d-flex flex-row align-items-center mb-1">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" asp-for="Name" disabled/>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-1">
                                <div class="form-outline flex-fill mb-0">
                                    <label class="form-label">Date</label>
                                    <input type="datetime" id="datetimepicker" class="form-control" asp-for="Date" disabled/>
                                </div>
                            </div>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label">Doctor</label>
                                <input type="text" class="form-control" asp-for="StaffName" disabled/>
                            </div>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label">Patients</label>
                                <input type="text" class="form-control" asp-for="PatientName" disabled/>
                            </div>

                            <br/>
                            <button type="submit" class="btn btn-primary">Confirm</button>
                            <a class="btn btn-secondary" asp-controller="Appointment" asp-action="Index">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>