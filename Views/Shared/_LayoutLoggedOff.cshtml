<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Lealthy Hospital Application System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Lealthy_Hospital_Application_System.styles.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
</head>
<style>
 
    header {
        background-color: #1e90ff;
        color: white;
        padding: 20px;
        display: flex;
        align-items: center; 
        justify-content: space-between; 
    }
    header img {
        height: 100px;
        margin-right: 20px; 
    }
    header .header-content {
        display: flex;
        align-items: center;
        flex-grow: 1; 
    }
    header h1 {
        margin: 0; 
        font-size: 24px;
        flex-grow: 1; 
        text-align: center; 
    }
    header a {
        margin-left: auto; 
        color: white; 
        text-decoration: none; 
    }
    nav {
        display: flex;
        justify-content: center;
        background-color: #4682b4; 
        padding: 10px;
    }
    nav a {
        color: white;
        text-decoration: none;
        margin: 0 15px;
        font-weight: bold;
    }
    nav a:hover {
        text-decoration: underline;
    }
    footer {
        background-color: #1e90ff;
        color: white;
        padding: 5px;
        text-align: center;
        position: fixed;
        bottom: 0;
        width: 100%;
        margin: 0;
    }
</style>

<body>
<header>
     <div class="header-content">
        <img src="@Url.Content("~/images/logo.png")" alt="Lealthy Hospital Logo"/>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted text-white">
    <div class="text-center text-white">
        &copy; 2024 - Lealthy Hospital Application System - <a asp-area="" asp-controller="Login" asp-action="Privacy" class="text-warning">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>